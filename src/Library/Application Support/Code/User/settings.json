{
    "editor.accessibilitySupport": "off",
    "editor.fontSize": 14,
    "editor.cursorBlinking": "smooth",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.smoothScrolling": true,
    "editor.mouseWheelScrollSensitivity": 0.45,
    "editor.minimap.enabled": false,
    "editor.inlayHints.enabled": "offUnlessPressed",
    "editor.fontFamily": "Cartograph Mono",
    "editor.rulers": [
        120
    ],
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,

    "files.insertFinalNewline": true, // Testing if this is good

    "terminal.integrated.fontSize": 14,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.fontFamily": "Cartograph Mono, MesloLGS NF",
    "terminal.integrated.defaultProfile.osx": "zsh",
    "workbench.colorTheme": "Andromeda Bordered",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.productIconTheme": "material-product-icons",
    "terminal.external.osxExec": "iTerm.app",

    "gitlens.currentLine.enabled": false,
    "gitlens.codeLens.authors.enabled": false,
    "gitlens.codeLens.recentChange.enabled": false,
    "git.autofetch": true,
    "git.confirmSync": false,

    // Python
    "python.languageServer": "Pylance",
    "python.terminal.activateEnvironment": true,
    //"python.terminal.executeInFileDir": true,
    "flake8.severity": {
        "E": "Error",
        "F": "Warning",
        "I": "Information",
        "W": "Warning"
    },
    //black formatter
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true
    },
    "jupyter.interactiveWindow.textEditor.executeSelection": true,

    // Terraform
    "terraform.languageServer.terraform.path": "/usr/local/bin/terraform",
    "[terraform]": {
        "editor.defaultFormatter": "hashicorp.terraform",
        "editor.formatOnSave": true,
        "editor.formatOnSaveMode": "file"
      },
      "[terraform-vars]": {
        "editor.defaultFormatter": "hashicorp.terraform",
        "editor.formatOnSave": true,
        "editor.formatOnSaveMode": "file"
    },
    "sqlfluff.linter.run": "onSave",
    "sqlfluff.experimental.format.executeInTerminal": true,
    "editor.formatOnSave": false,
    "[sql]": {
        "editor.formatOnSave": false
    },
    "[jinja-sql]": {
        "editor.formatOnSave": false
    },

    // dbt
    "files.associations": {
        "*.sql": "jinja-sql",
        // don't format models in `target/` dir
        "**/target/**": "",
    },
    // YAML
    "[yaml]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },

    // Copilot
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    },
    "snowflake.snowsqlConfigPath": "~/.snowsql/config",
    "github.copilot.chat.localeOverride": "en",
    "gitlens.launchpad.indicator.enabled": false,

    "extensions.experimental.affinity": {
        "vscodevim.vim": 1
    },
    "github.copilot.editor.enableAutoCompletions": true,
    "interactiveWindow.executeWithShiftEnter": true,
    "gitlens.views.scm.grouped.views": {
        "commits": true,
        "branches": true,
        "remotes": true,
        "stashes": false,
        "tags": true,
        "worktrees": true,
        "contributors": true,
        "repositories": false,
        "searchAndCompare": true,
        "launchpad": false
    },
    "diffEditor.ignoreTrimWhitespace": false,
    "terminal.integrated.scrollback": 5000,
}
